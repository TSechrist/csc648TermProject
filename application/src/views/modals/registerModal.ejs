<div class="modal fade " id="registerModal">
    <div class="modal-dialog modal-dialog-centered .modal-dialog-scrollable">
        <div class="modal-content register-modal-container">
            <div class="modal-header loginProperties">
                <div class="container-fluid">
                <div class="ml-auto mr-8"><b>REGISTER</b></div>
                    <button type="button" class="close white" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
            </div>
    <div class="modal-body loginProperties">
        <div class="container-fluid"> 
    <form action="regis" method="POST">
        <div class="form-group">
            <label for="firstname">First name</label>
            <input
                    type="text"
                    id="firstname"
                    title="Enter A Valid Name With Alphabets"
                    pattern="[A-Za-z0-9]+"
                    name="firstname"
                    class="form-control"
                    placeholder="e.g John"
                    required >
        </div>
        <div class="form-group">
            <label for="lastname">Last name</label>
            <input
                    type="text"
                    id="lastname"
                    title="Enter A Valid Name With Alphabets"
                    pattern="[A-Za-z0-9]+"
                    name="lastname"
                    class="form-control"
                    placeholder="e.g Doe"
            required>
        </div>

        <div class="form-group">
            <label for="email">SFSU Email</label>
            <input
                    type="email"
                    id="email"
                    title="Enter A Valid SFSU email"
                    pattern="[a-zA-Z0-9]+[@]+(mail.sfsu.edu)"
                    name="email"
                    class="form-control"
                    placeholder="e.g johndoe@mail.sfsu.edu"
            required>
        </div>

        <div class="form-group">
            <label for="passwordRegister">Password</label>
            <input
                    type="password"
                    id="passwordRegister"
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                    name="passwordRegister"
                    class="form-control"
                    placeholder="min 8 chars"
            required>
            <input type="checkbox" onclick="showPassword()">Show Password
        </div>

        <div class="form-group">
            <label for="confirm_password">Confirm Password</label>
            <input
                    type="password"
                    id="confirm_password"
                    name="confirm_password"
                    class="form-control"
                    placeholder="Confirm Password"
            required>
            <span id='message' class='modalMessageFont'></span>
        </div>
        <input id="formSubmit" type="submit" class="btn btn-light" value="Register" disabled="disabled">
        <div class="row">
            <div class=""><p>*By Registering I Agree To The <u>Terms And Conditions</u></p></div>       
        </div>
    </div>
</div>
    </form>
    <div class="modal-footer">
        
        
        <p class="lead mt-4">Already have an Account? </p>
        
        <button type="button" class="btn btn-dark" data-dismiss="modal" data-toggle="modal" href="#loginModal">Login</button>
    </div>

     </div>
    </div>
</div>

  <!-- This function checks if password is equal -->
  <script>
    $('#passwordRegister, #confirm_password').on('keyup', function () {
        var value=$ ('#passwordRegister').val();
        if (value.length > 0) {
        if ($ ('#passwordRegister').val() == $('#confirm_password').val()) {
          $('#message').html("Passwords match!").css('color', 'green');
          $("#formSubmit").prop("disabled",false).css('background-color','#5cb85c');
        } else {
          $('#message').html("Passwords don't match!").css('color', 'red');
          $( "#formSubmit" ).prop( "disabled", true ).css('background-color','#d9534f');
    }
}
});

function showPassword() {
    var x = document.getElementById("passwordRegister");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
}
</script>
